<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="5dp"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="10dp"
        android:elevation="5dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="5dp"
        tools:ignore="UnusedAttribute">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/repo_title_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/repo_label"
                android:textColor="@color/black_060"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/repo_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/repo_title_label"
                android:layout_marginTop="8dp"
                android:textColor="@color/black_100"
                android:textSize="16sp"
                tools:text="Repo Title" />

            <TextView
                android:id="@+id/author_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="@string/owner_author_label"
                android:textColor="@color/black_060"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/author_label"
                android:layout_marginTop="8dp"
                android:textColor="@color/black_040"
                tools:text="Author" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>